<link rel="stylesheet" href="/stylesheets/navbar.css" />
<nav class="navbar sticky-top navbar-expand-lg" id="nav_top">
    <div class="container-fluid">

         <a class="navbar-brand" href="/">
            <img class="navbar-brand" src="/images/white_logo.png" alt="HomePage" width="125" height="50" class="d-inline-block align-text-top">
         </a>
         <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link" href="/products">Products</a>
            </div>
         </div>
         <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <form class="container-fluid">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search" id="cust-search-bar">
                    <button class="btn btn-outline-secondary" type="button" id="search_button">Search</button>
                </div>
            </form>
         </div>

        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav ms-auto">
                <% if(!currentUser) { %>
                    <a class="nav-link" href="/login">Login</a>
                    <a class="nav-link" href="/register">Register</a>
                <% } else { %>
                    <% if(currentUser.isAdmin) { %>
                        <a class="nav-link" href="/adminProfile">Admin Dashboard</a>
                    <% } else { %> 
                        <a class="nav-link" href="/profile">Profile</a>                
                    <% } %> 
                    <a class="nav-link" href="/logout">Logout</a>
                <% } %> 
                <a class="nav-link" href="/cart">
                    <i class="fa-solid fa-cart-shopping fa-lg" aria-hidden="true"></i>
                    
                        <% if(session.cart) {%>
                            <span class="position-absolute translate-middle badge rounded-pill bg-danger">
                                <%= session.cart.totalQty %>
                            </span>
                            
                        <% } %>          
                </a>
            </div>
        </div>
    </div>
</nav>