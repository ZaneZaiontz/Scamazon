<% layout('layouts/boilerplate') %>
    <div class="container justify-content-center align-items-center mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card-title text-center">Login</h5>
                        <form action="/login" method="POST" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username" autofocus required>
                            </div>
                            <!-- end username -->
                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required>
                                <label class="form-label">Forgot password?</label>
                            </div>
                            <!-- end password -->
                            <div class="d-grid gap-2">
                                <button class="btn btn-success" type="submit">Login</button>
                            </div>
                        </form>
                        <div class="mb-3 text-center gap-2">
                            <label class="form-label">Don't have an account?</label>
                        </div>
                        <div class="mb-3 text-center gap-2">
                            <label class="form-label"></label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>