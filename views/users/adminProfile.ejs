<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/profile.css" />
<div class="row top-box">
    <h1 class="text-center"><%= currentUser.username %>'s Account</h1>
</div>
<section class="main-content">
    <div class="container">
        <!-- Row 1 start -->
        <div class="row mt-4">
            <!-- Modify all items -->
            <div class="col-sm-6">
                <a href="/admin/manageProducts/">
                    <div class="account-card">
                        <div class="account-card-content">
                            <h4 class="mb-2 text-muted">View Products</h4>
                            <p>View, manage, and create products</p>
                        </div>
                        <div class="account-card-icon">
                            <div class="account-card-icon-circle is-primary">
                                <i class="fa-solid fa-cart-shopping"></i>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <!-- Modify users -->
            <div class="col-sm-6">
                <a href="/admin/manageUsers/">
                    <div class="account-card">
                        <div class="account-card-content">
                            <h4 class="mb-2 text-muted">Manage Users</h4>
                            <p>View and modify current users</p>
                        </div>
                        <div class="account-card-icon">
                            <div class="account-card-icon-circle">
                                <i class="fa-solid fa-address-card"></i>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <!-- Show currently placed orders -->
            <div class="col-sm-6">
                <a href="/admin/viewOrders/">
                    <div class="account-card">
                        <div class="account-card-content">
                            <h4 class="mb-2 text-muted">View Orders</h4>
                            <p>View currently placed orders</p>
                        </div>
                        <div class="account-card-icon">
                            <div class="account-card-icon-circle">
                                <i class="fa-solid fa-list"></i>
                            </div>
                        </div>
                    </div>
                </a>
            </div>

            <!-- View history of orders -->
            <!-- <div class="col-sm-6">
                    <div class="account-card">
                        <div class="account-card-content">
                            <h4 class="mb-2 text-muted">Order History</h4>
                            <p>View order history</p>
                        </div>
                        <div class="account-card-icon">
                            <div class="account-card-icon-circle">
                                <i class="fa-solid fa-clipboard"></i>
                            </div>
                        </div>
                    </div>
                </div> -->
            <div class="col-sm-6">
                <a href="/logout">
                    <div class="account-card">
                        <div class="account-card-content">
                            <h4 class="mb-2 text-muted text-align: left;">Logout</h4>
                            <p>Logout of your account</p>
                        </div>
                        <div class="account-card-icon">
                            <div class="account-card-icon-circle">
                                <i class="fa-solid fa-address-card"></i>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>
