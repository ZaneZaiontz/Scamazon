<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/products.css">
    <!-- <div class="container"> -->
    <h1>All Products</h1>
    <div>
        
    </div>

    <div class="row">
        <div class="col-md-2">
            <div class="card mb-3">
                <div class="row">
                    Filters go here
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <% for(let product of products) { %>
                <div class="card mb-3">
                    <div class="row">
                        <div class="col-md-3">
                            <img src="<%= product.image %>" class="img-fluid display-items" alt="">
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= product.title %>
                                </h5>
                                <p class="card-text">
                                    <%= product.description %>
                                </p>
                                <p class="card-text">$
                                    <%= product.price %>
                                </p>
                                <p class="card-text">
                                    <small class="text-muted">Quantity: <%= product.quantity %></small>
                                </p>
                                <a class="btn btn-primary" href="/products/<%= product._id %> ">View <%= product.title %> </a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }%>
        </div>
        <div class="col-md-2">
            <div class="card mb-3">
                <div class="row">
                    <a href="/products/new">Add Product</a>
                </div>
            </div>
        </div>
    </div>